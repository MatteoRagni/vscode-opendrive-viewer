{
  "name": "vscode-opendrive-viewer",
  "displayName": "vscode-opendrive-viewer",
  "description": "Visualize an OpenDRIVE in 3D using ODRViewer in Visual Studio Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.92.0"
  },
  "icon": "assets/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "opendrive-viewer.show",
      "title": "Show the current OpenDRIVE in ODRViewer",
      "category": "OpenDRIVE",
      "icon": "$(open-preview)",
      "enablement": "resourceExtname == .xodr"
    }],
    "menus": {
      "editor/title": [{
        "command": "opendrive-viewer.show",
        "when": "resourceExtname == .xodr",
        "group": "navigation"
      }]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
